<UserControl x:Class="_02350Project.View.EdgeUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c="clr-namespace:_02350Project.Other"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    
    <UserControl.Resources>
        <c:BooleanToStrokeArrayDashConverter x:Key="BoolToDash"/>    
    </UserControl.Resources>

    <Line Stroke="Black" StrokeThickness="1" StrokeDashArray="{Binding Dash, Converter={StaticResource BoolToDash}}" X1="{Binding AX}" Y1="{Binding AY}" X2="{Binding BX}" Y2="{Binding BY}"/> <!--StrokeDashArray 5,2-->

</UserControl>
