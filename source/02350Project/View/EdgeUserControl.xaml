<UserControl x:Class="_02350Project.View.EdgeUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c="clr-namespace:_02350Project.Other"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    
    <UserControl.Resources>
        <c:BooleanToStrokeArrayDashConverter x:Key="BoolToDash"/>    
    </UserControl.Resources>

    <Grid>
        
        <Line Name="ActualLine" Stroke="Black" StrokeThickness="1" StrokeDashArray="{Binding Dash, Converter={StaticResource BoolToDash}}" 
              X1="{Binding AX, FallbackValue=0}" Y1="{Binding AY, FallbackValue=0}" 
              X2="{Binding BX,FallbackValue=300}" Y2="{Binding BY, FallbackValue=100}"/>
        
        <Line Name="InvisibleLine" Stroke="Transparent" StrokeThickness="5" 
              X1="{Binding Path=X1, ElementName=ActualLine}" Y1="{Binding Path=Y1, ElementName=ActualLine}"
              X2="{Binding Path=X2, ElementName=ActualLine}" Y2="{Binding Path=Y2, ElementName=ActualLine}"/>
        
        <Polyline Points="{Binding ActualArrow}" StrokeThickness="1" Stroke="Black" Fill="{Binding Color}"/>
        
    </Grid>
</UserControl>
